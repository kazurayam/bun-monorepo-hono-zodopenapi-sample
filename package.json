{
  "name": "@kazurayam/bun-monorepo-hono-zodopenapi-sample",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "backend": "bun --watch ./packages/backend/src/server.ts",
    "frontend": "bun --watch ./packages/frontend/src/index.tsx",
    "test:backend": "bun test --cwd ./packages/backend",
    "test:frontend": "bun test --cwd ./packages/frontend --preload ./happydom.ts --preload ./testing-library.ts",
    "test:shared": "bun test --cwd ./packages/shared",
    "test": "bun test --cwd ./packages/backend && bun test --cwd ./packages/frontend --preload ./happydom.ts && bun test --cwd ./packages/shared"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
